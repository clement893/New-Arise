{
  "name": "modele-nextjs-fullstack",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @modele/web dev",
    "build": "pnpm --filter @modele/web build",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "test": "pnpm --recursive test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "setup": "node scripts/setup.js",
    "validate:env": "pnpm --filter @modele/web env:validate",
    "validate:env:backend": "cd backend && python -m app.core.config",
    "validate:env:frontend": "pnpm --filter @modele/web env:validate",
    "security:scan": "bash scripts/security-scan.sh || powershell -ExecutionPolicy Bypass -File scripts/security-scan.ps1",
    "security:audit": "pnpm audit --recursive && cd backend && safety check || echo 'safety not installed, skipping Python security check'",
    "security:check": "pnpm security:scan && pnpm security:audit"
  },
  "devDependencies": {
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
